.search{
  width: 500rpx;
  height: 80rpx;
  border: 1px solid lightgray;
  border-radius: 20rpx;
  font-size: 25rpx;
  position: absolute;
  background-color: #fff;
  top: 70rpx;
  left: 125rpx;
}

.swiper{
  width: 100%;
  height: 500rpx;
}
.slide-img{
  width: 100%;
  height: 500rpx;
}
.nav{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}
.nav-item{
  width: 150rpx;
  height: 200rpx;
  text-align: center;
  font-size: 25rpx;
}
.nav-img{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0 10rpx 0;
}

.hot-goods{
  background-color: #fff;
  margin:20rpx 0;
  height: auto;
  overflow: auto;
}

.hot-title{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
.good-item{
  width: 350rpx;
  height: 490rpx;
  float: left;
  margin: 0 0 20rpx 10rpx;
  border: 1px solid lightgray;
  font-size: 25rpx;
  color: gray;
}
.good-img{
  width: 350rpx;
  height: 350rpx;
}
.good-name{
  font-size: 30rpx;
  color: black;
}
.good-price{
  color: red;
}


.cartitem{
  margin-bottom: 30rpx;
  padding: 5%;
  height: 200rpx;
 background-color: #fff;
 border-bottom: 1px solid gray;
}
radio{
  float: left;
  line-height: 200rpx;
}
.cartimg{
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin: 0 10rpx 0 20rpx;
}
.cart-conten{
  float: right;
  width: 360rpx;
  height: 200rpx;
  border: 1px solid palegoldenrod;
}
.cart-price{
  font-size: 36rpx;
  color: red;
  font-weight: bold;
}
.btn{
  margin-top: 20rpx;
  width: 360rpx;
  height: 70rpx;
}
.btn button{
  width: 60rpx;
  height: 60rpx;
  float: left;
}
.btn input{
  width: 70rpx;
  height: 60rpx;
  float: left;
  border: 1px solid grey;
}