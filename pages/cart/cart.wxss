.item{
  margin: 20rpx 0;
  padding: 0 35rpx;
  width: 680rpx;
  height: 300rpx;
  background-color: #fff;
  border-bottom: 2rpx solid lightgray;
}
.my-check{
  float: left;
  margin: 130rpx 0;
}
.goodimg{
  margin: 50rpx 10rpx;
  float: left;
  width: 200rpx;
  height: 200rpx;
}
.left{
  margin: 50rpx 0;
  float: left;
  width: 280rpx;
  height: 200rpx;
}
.goodname{
  height: 130rpx;
  font-size: 30rpx;
  color: grey;
}

.stepper {  
    width: 170rpx;  
    height: 52rpx;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper text {  
    width: 38rpx;  
    line-height: 52rpx;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    width: 80rpx;  
    height: 52rpx;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 24rpx;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  

.right{
  margin: 50rpx 0;
  float: right;
  width: 120rpx;
  height: 200rpx;
}
.right icon{
  margin: 30rpx 40rpx;
}
.price{
  margin: 30rpx 0;
  color: red;
  font-size: 32rpx;
}
 .footer{
  width: 750rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color:#ff5777;
  color: #fff;
  line-height: 100rpx;
} 
.footer icon{
  float: left;
  margin: 20rpx;
}
.totalprice{
  float: left;
  margin-left: 40rpx;
  width: 250rpx;
}
.pay{
  width: 250rpx;
  height: 200rpx;
  background-color: orangered;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  float: right;
}